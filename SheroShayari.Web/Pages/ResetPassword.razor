@page "/reset-password"
@using SheroShayari.Web.Services
@using SheroShayari.Web.Models
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject HttpClient HttpClient

<div class="reset-password-container">
    <div class="reset-password-card">
        <h2>üîê Reset Password</h2>
        <p class="subtitle">Create a new password for your SheroShayari account</p>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading...</p>
            </div>
        }
        else if (tokenValid)
        {
            <EditForm Model="@resetModel" OnValidSubmit="@HandleResetPassword">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <InputText id="newPassword" class="form-control" type="password"
                        @bind-value="resetModel.NewPassword" 
                        placeholder="Enter your new password" 
                        required />
                    <ValidationMessage For="@(() => resetModel.NewPassword)" />
                    <small class="form-text text-muted">Password must be at least 6 characters long</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <InputText id="confirmPassword" class="form-control" type="password"
                        @bind-value="resetModel.ConfirmPassword" 
                        placeholder="Confirm your new password" 
                        required />
                    <ValidationMessage For="@(() => resetModel.ConfirmPassword)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        ‚ùå @errorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        ‚úÖ @successMessage
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Resetting password...</span>
                    }
                    else
                    {
                        <span>Reset Password</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <h5>‚ùå Password Reset Failed</h5>
                <p>@errorMessage</p>
                <div class="mt-3">
                    <p>This usually means:</p>
                    <ul>
                        <li>The reset link has expired (links are valid for 24 hours)</li>
                        <li>The link has already been used</li>
                        <li>The link may have been corrupted</li>
                    </ul>
                    <p class="mt-3 mb-0">Please <a href="/forgot-password">request a new password reset link</a>.</p>
                </div>
            </div>
        }

        <div class="info-box mt-4">
            <small>‚úÖ This link expires in 24 hours</small>
        </div>
    </div>
</div>

@code {
    private ResetPasswordModel resetModel = new();
    private string? email;
    private string? code;
    private string errorMessage = "";
    private string successMessage = "";
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool tokenValid = false;

    protected override async Task OnInitializedAsync()
    {
        // Get query parameters
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        email = query["email"];
        code = query["code"];

        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(code))
        {
            errorMessage = "Invalid password reset link. Missing email or verification code.";
            isLoading = false;
            return;
        }

        // Set hidden fields
        resetModel.Email = email;
        resetModel.Token = code;

        // Validate token by calling the API
        try
        {
         //   var response = await HttpClient.GetAsync($"/api/auth/validate-reset-token?email={System.Web.HttpUtility.UrlEncode(email)}&code={System.Web.HttpUtility.UrlEncode(code)}");
            var response = await HttpClient.GetAsync($"/api/auth/validate-reset-token?email={System.Web.HttpUtility.UrlEncode(email)}&code={System.Web.HttpUtility.UrlEncode(System.Web.HttpUtility.UrlEncode(code))}");
            if (response.IsSuccessStatusCode)
            {
                tokenValid = true;
            }
            else
            {
                errorMessage = "Password reset link is invalid or has expired. Please request a new password reset.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error validating reset link: {ex.Message}";
        }

        isLoading = false;
    }

    private async Task HandleResetPassword()
    {
        // Validate passwords match
        if (resetModel.NewPassword != resetModel.ConfirmPassword)
        {
            errorMessage = "Passwords do not match!";
            return;
        }

        if (resetModel.NewPassword.Length < 6)
        {
            errorMessage = "Password must be at least 6 characters long!";
            return;
        }

        isSubmitting = true;
        errorMessage = "";
        successMessage = "";

        try
        {
            var response = await HttpClient.PostAsJsonAsync("/api/auth/reset-password", resetModel);
            
            if (response.IsSuccessStatusCode)
            {
                var jsonContent = await response.Content.ReadAsStringAsync();
                var options = new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                var result = System.Text.Json.JsonSerializer.Deserialize<ResetResponse>(jsonContent, options);

                if (result?.Success == true)
                {
                    successMessage = "‚úÖ Your password has been reset successfully! Redirecting to login...";
                    await Task.Delay(3000);
                    Navigation.NavigateTo("/login");
                }
                else
                {
                    errorMessage = result?.Message ?? "Failed to reset password. Please try again.";
                }
            }
            else
            {
                var jsonContent = await response.Content.ReadAsStringAsync();
                var options = new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                var result = System.Text.Json.JsonSerializer.Deserialize<ResetResponse>(jsonContent, options);
                errorMessage = result?.Message ?? "Failed to reset password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class ResetPasswordModel
    {
        public string Email { get; set; } = "";
        public string Token { get; set; } = "";
        public string NewPassword { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
    }
}

